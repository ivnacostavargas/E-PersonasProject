<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sondeo Alameda"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="1.- ¿Le gusta la apariencia que guarda\n actualmente la alameda?"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/Alamedap1OP1"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="2.- ¿Usted se siente seguro al transitar\n por la zona de la alameda?"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/Alamedap2OP1"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="3.- ¿Le gustaría que la alameda fuera\n un lugar para el recreo y el esparcimiento\n de los niños y las familias?"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/Alamedap3OP1"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="4.- ¿Cual considera el principal problema de la\n alameda?"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <CheckBox
            android:id="@+id/Alamedap4OP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La Inseguridad"
            android:layout_marginLeft="3dp"/>

        <CheckBox
            android:id="@+id/Alamedap3OP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="El Ambulantaje"
            android:layout_marginLeft="3dp"/>
        <CheckBox
            android:id="@+id/Alamedap3OP3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="La Moviliadad"
            android:layout_marginLeft="3dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="5.- ¿Que haría usted para mejorar la imagen de la\n alameda?"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/Alamedap5OP1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Comentarios"/>


    <!--**********Aqui empieza el mapa***********************-->
    <FrameLayout
        android:id="@+id/map_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        tools:context=".FirstMapActivity"></FrameLayout>
    <!--**********Aqui termina el mapa***********************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="6.- ¿Quiere recibir los Resultados?"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/Alamedap6OP1"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/Alameda_preunta1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/Alamedap7OP1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muy Buena"
            android:layout_marginRight="3dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/Alamedap7OP2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buena"
            android:layout_marginRight="3dp"
            android:checked="true"/>

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Edad Aproximada"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/ubicacionEncuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></Spinner>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Otro Especifique"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

</LinearLayout>