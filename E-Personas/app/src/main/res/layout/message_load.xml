<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/horizontal_margin_medium"
    android:paddingBottom="@dimen/horizontal_margin_medium">

    <ProgressBar
        android:id="@+id/progress_bar_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/textMessageLoad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_espera_message_load"
        android:layout_centerInParent="true"
        android:textStyle="bold"/>

</RelativeLayout>