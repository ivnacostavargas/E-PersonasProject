<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.gob.pgutierrezd.e_personas.views.InicioActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background">

        <ImageView
            android:id="@+id/logo_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_head_inicio"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_app_slogan"
            android:gravity="center"
            android:textColor="@color/color_orange"
            android:textSize="@dimen/text_bigsize_title"
            android:layout_below="@id/logo_head"
            android:textStyle="bold"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_inicio"
            android:layout_below="@+id/title"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@color/color_black_light">

        <TextView
            android:id="@+id/textComenzamos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_hint_inicio_comencemos"
            android:gravity="center"
            android:textSize="@dimen/text_size_sub_title"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/horizontal_margin_medium"
            android:layout_marginBottom="@dimen/vertical_medium"
            />

        <!--<Button
            android:id="@+id/loginFacebook"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textComenzamos"
            android:text="Connect with Facebook"
            android:background="@color/color_blue"
            android:textColor="@color/color_white"/>-->
        <com.facebook.login.widget.LoginButton
            android:id="@+id/btn_login_facebook"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textComenzamos"/>

        <Button
            android:id="@+id/btn_go_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_inicio_ir_login"
            android:textColor="@color/color_white"
            android:background="@android:color/transparent"
            android:layout_below="@+id/btn_login_facebook"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size_sub_title"/>

    </RelativeLayout>

</LinearLayout>
