<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/color.background"
    tools:context=".views.LoginActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/text_title"
        android:text="@string/login.title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/login.size.title"
        android:textColor="@color/color.login.title"
        android:textStyle="bold"
        android:layout_below="@+id/image_logo"/>

    <TextView
        android:id="@+id/text_subtitle"
        android:text="@string/login.sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/login.size.sub_title"
        android:textColor="@color/color.login.sub_title"
        android:textStyle="bold"
        android:layout_below="@+id/text_title"/>

    <LinearLayout
        android:id="@+id/layout_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_subtitle">

        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Usuario"
            android:background="@drawable/shape_round"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_action_person"/>

        <EditText
            android:id="@+id/edit_password"
            android:hint="ContraseÃ±a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round"
            android:singleLine="true"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_action_accounts"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn.login.login"
            android:background="@color/color.background.login.btn.login"
            android:textColor="@color/color.text.login.btn.login"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:drawableRight="@drawable/ic_action_accept"/>

        <ProgressBar
            android:id="@+id/login_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>
